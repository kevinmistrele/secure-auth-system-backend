{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "strict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
